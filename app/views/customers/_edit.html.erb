<fieldset>
	<legend>
		<%= t(:legend_customer) %>
	</legend>
	<%= f.label t("label_ident") %>
	<%= f.text_field :ident %>
	<br/>
	<%= f.label t("label_type") %>
	<%= f.collection_select(:typesobject_id, @types, :id, :name) %>
	<br/>
	<%= f.label t("label_designation") %>
	<%= f.text_field :designation %>
	<br/>
	<%= f.label t("label_description") %>
	<%= f.text_area :description , :rows => 10 %>
	<br/>
	<%if (@customer.statusobject.promote!=true || @customer.statusobject.demote!=true) %> <%= f.label t("modif_status") %>
	<% if(@customer.statusobject != nil) %>
	<%= f.collection_select(:statusobject_id, @status, :id, :name) %>
	<% end %>
	<%else %> <%= f.label t("label_status") %>
	<% if(@customer.statusobject != nil) %>
	<%= @customer.statusobject.name %>
	<%end %>
	<%end %>
	<br/>
	<%= f.label t(:label_responsible) %>
	<%= select_in_list(:customer, :owner, @customer.owner.login, :users) %>
	<br/>
	<%= f.label t("label_date") %>
	<%= f.date_select :date %>
	<br/>
	<%= h_input_domain(f) %>
	<%= h_type_values(@customer, fonct) %>
	<br />
</fieldset>
