<h1><%= t(:datafile_add) %></h1>
<%= form_for @datafile, :html => { :multipart => true}, :url => { :action=>"add_datafile",:id=>@customer.id }  do |f| %>
<%= f.error_messages %>
<%= hidden_field_tag "customer_id", @customer.id.to_s %>
<%= render(:partial => "datafiles/edit_datafile",:locals => { :f => f , :fonct=>"doc_new", :document=>@customer}) %>
<table class='menu_bas'>
	<tr>
		<td><%= f.submit t("create") %></td>
		<td> <%= link_to t("list"), datafiles_path %> </td>
		<td> <%= link_to t("customer_show"), customer_path(@customer) %> </td>
	</tr>
</table>
<% end %>
