<h1><%=t("document_new")%></h1>

<% form_for(@document,
	:html => { :multipart => true}) do |f| %>
  <%= hidden_field :document , :revision %>
	<%= f.error_messages %>

  <p>
    <b><%= f.label t("label_ident") %></b><br />
    <%= f.text_field :ident %>
  </p>
  <p>
    <b><%= f.label t("label_type") %></b><br />
    <%= f.collection_select(:typesobject_id, @types, :id, :name)%>
 </p>
  <p>
    <b><%= f.label t("label_revision") %></b><br />
    <%=h @document.revision %>
		

  </p>
  <p>
    <b><%= f.label t("label_designation") %></b><br />
    <%= f.text_field :designation %>
  </p>
  <p>
    <b><%= f.label t("label_description") %></b><br />
    <%= f.text_area :description , :rows => 10%>
  </p>
  
  <p>
    <b><%= f.label t("label_repository") %></b><br />
    <%= f.collection_select(:volume_id, @volumes, :id, :name)%>
  </p>
  <p>
    <b><%= f.label t("label_file")%>:</b><%=@document.filename %><br />
    <%= f.file_field("uploaded_file") %>
  </p>
  <p>
    <b><%= f.label t("label_status") %></b><br />
    <% if(@document.statusobject != nil) %>
  		<%=h @document.statusobject.id %>:<%=h @document.statusobject.name %>
  	<% end %> 
  </p>
  <p>
    <b><%= f.label t("label_responsible") %></b><br />
    <%= @document.owner.login %>
  </p>
  
  <p>
    <b><%= f.label t("label_date") %></b><br />
    <%= f.date_select :date %>
  </p>

<table class='menu_bas'>
<tr>
<td><%= f.submit t("create") %></td>
<td><%= link_to t("list"), documents_path %></td>
</tr>
</table>
<% end %>