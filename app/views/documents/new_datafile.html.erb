<h1><%= t(:datafile_add) %></h1>

<% form_for @datafile, :html => { :multipart => true}, :url => { :action=>"add_datafile",:id=>@document.id }  do |f| %>
<%= f.error_messages %>
<%= hidden_field_tag "document_id", @document.id.to_s %>
<%= render(:partial => "datafiles/edit_datafile",:locals => { :f => f , :fonct=>"doc_new", :document=>@document}) %>
<%= render(:partial => "shared/menu_new", :locals => {:object => @document, :f => f}) %>
<% end %>