<fieldset>
	<legend>
		<%= t(:legend_document) %>
	</legend>
	<%= f.label t("label_ident") %>
	<%= f.text_field :ident %>
	<br/>
	<%= f.label t("label_type") %>
	<%= f.collection_select(:typesobject_id, @types, :id, :name) %>
	<br/>
	<%= f.label t("label_revision") %>
	<%= text_field_tag :revision, @document.revision, :disabled => true %>
	<br/>
	<%= f.label t("label_designation") %>
	<%= f.text_field :designation %>
	<br/>
	<%= f.label t("label_description") %>
	<%= f.text_area :description , :rows => 10 %>
	<br/>
	<%if (@document.promote_by_select? || @document.demote_by_select? == 1) && !@document.frozen? %>
	<%= f.label t("label_status") %>
	<% unless @document.statusobject.nil? %>
	<%= f.collection_select(:statusobject_id, @status, :id, :name) %>
	<% end %>
	<%else %>
	<%= f.label t("label_status") %>
	<% unless @document.statusobject.nil? %>
	<%= text_field_tag :status, @document.statusobject.name, :disabled => true %>
	<%end %>
	<%end %>
	<br/>
	<%= f.label t("label_responsible") %>
	<%= hidden_field :document , :owner_id %>
	<%= text_field_tag "document_owner_display", @document.owner.login, :disabled => true %>
	<%= link_to h_img_btn("btn_select").to_s, {:controller => "users", :todo => "select", :html_ident => "document_owner"} , {:target => "_blank", :class => 'menu_bas'}%> </td>
	<br/>
	<%= f.label t("label_date") %>
	<%= f.date_select :date %>
	<br />
	<%= h_input_text(f ,:domain) %>
	<br/>
</fieldset>
