<fieldset>
	<legend>
		<%= t(:legend_document) %>
	</legend>
	<%= f.label t("label_ident") %>
	<%= f.text_field :ident , :readonly => @document.column_readonly?(:ident) %>
	<br/>
	<%= f.label t("label_type") %>
	<%= f.collection_select(:typesobject_id, @types, :id, :name, :readonly => @document.column_readonly?(:typesobject_id)) %>
	<br/>
	<%= f.label t("label_revision") %>
	<%= text_field_tag :revision, @document.revision, :readonly => true %>
	<br/>
	<%= f.label t("label_designation") %>
	<%= f.text_field :designation, :readonly => @document.column_readonly?(:designation) %>
	<br/>
	<%= f.label t("label_description") %>
	<%= f.text_area :description , :rows => 10, :readonly => @document.column_readonly?(:description) %>
	<br/>
	<%if (@document.promote_by_select? || @document.demote_by_select? == 1) && !@document.frozen? %>
	<%= f.label t("label_status") %>
	<% unless @document.statusobject.nil? %>
	<%= f.collection_select(:statusobject_id, @status, :id, :name) %>
	<% end %>
	<%else %>
	<%= f.label t("label_status") %>
	<% unless @document.statusobject.nil? %>
	<%= text_field_tag :status, @document.statusobject.name, :readonly => true %>
	<%end %>
	<%end %>
	<br/>
	<%= f.label t("label_responsible") %>
	<%= select_in_list(:document, :owner, @document.owner.login, :users) %>
	<br/>
	<%= f.label t("label_date") %>
	<%= f.date_select :date %>
	<br/>
	<%= h_input_text(f , :domain) %>
	<br />
	<%= h_type_values(@document, fonct) %>
	<br/>
</fieldset>
