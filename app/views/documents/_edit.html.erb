<fieldset>
	<legend>
		<%= t(:legend_document) %>
	</legend>
	<%= f.label t("label_ident") %>
	<%= f.text_field :ident %>
	<br/>
	<%= f.label t("label_type") %>
	<%= f.collection_select(:typesobject_id, @types, :id, :name) %>
	<br/>
	<%= f.label t("label_revision") %>
	<%= text_field_tag :revision, @document.revision, :disabled => true %>
	<br/>
	<%= f.label t("label_designation") %>
	<%= f.text_field :designation %>
	<br/>
	<%= f.label t("label_description") %>
	<%= f.text_area :description , :rows => 10 %>
	<br/>
	<%if (@document.statusobject.promote!=true || @document.statusobject.demote!=true ) && !@document.frozen? %>
	<%= f.label t("label_status") %>
	<% unless @document.statusobject.nil? %>
	<%= f.collection_select(:statusobject_id, @status, :id, :name) %>
	<% end %>
	<%else %>
	<%= f.label t("label_status") %>
	<% if(@document.statusobject != nil) %>
	<%= text_field_tag :status, @document.statusobject.name, :disabled => true %>
	<%end %>
	<%end %>
	<br/>
	<%= f.label t("label_responsible") %>
	<%= text_field_tag :responsible, @document.owner.login, :disabled => true %>
	<br/>
	<%= f.label t("label_date") %>

	<%= f.date_select :date %>
	<br/>
</fieldset>
