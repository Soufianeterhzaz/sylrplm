<h1><%=t("workitems_show") %><%= workitem_path(@workitem) %></h1>
<div style="float: left;">
    <table>
        <%= render :partial => 'shared/workitem_header', :locals => { :workitem => @workitem } %>
        <tr class="nhover">
            <td>
                <%=t(:label_fields)%>
            </td>
            <td>
                <pre><%= h @workitem.field_hash.to_json.gsub(/,/, ",\n") %></pre>
            </td>
        </tr>
        <%= render(:partial => "workitems/wi_links") %>
        <tr>
            <td colspan='2'>
                <%= link_to t('edit'), edit_workitem_path(@workitem) %>|<%= link_to t('list'), workitems_path %>
            </td>
        </tr>
    </table>
</div>
<div class="align-right">
    <%= render_fluo :wfid => @workitem.wfid, :workitems => [ @workitem.expid ] %>
</div>
