<h1><%=t(:project_edit) %></h1>
<% form_for(@project) do |f| %>
<%= f.error_messages %>
<p>
    <b><%= f.label t(:label_ident) %></b>
    <br/>
    <%= f.text_field :ident %>
</p>
<p>
    <b><%= f.label t(:label_type) %></b>
    <br/>
    <%= f.collection_select(:typesobject_id, @types, :id, :name) %>
</p>
<p>
    <b><%= f.label t(:label_designation) %></b>
    <br/>
    <%= f.text_field :designation %>
</p>
<p>
    <b><%= f.label t(:label_description) %></b>
    <br/>
    <%= f.text_area :description , :rows => 10 %>
</p>
<p>
    <%if (@project.statusobject.promote!=true || @project.statusobject.demote!=true) %>
    <b><%= f.label t("modif_status") %></b>
    <br/>
    <% if(@project.statusobject != nil) %>
    <%= f.collection_select(:statusobject_id, @status, :id, :name) %>
    <% end %>
    <%else %>
    <b><%= f.label t("label_status") %></b>
    <br/>
    <% if(@project.statusobject != nil) %>
    <%= @project.statusobject.name %>
    <%end %>
    <%end %>
</p>
<p>
    <b><%= f.label t(:label_responsible) %></b>
    <br/>
    <%= @project.owner.login %>
</p>
<p>
    <b><%= f.label t(:label_date) %></b>
    <br/>
    <%= f.date_select :date %>
</p>
<table class='menu_bas'>
    <tr>
        <td>
            <%= f.submit t("update") %>
        </td>
        
            <%if @project.statusobject.promote==true %>
            <td><%= link_to t(:promote), :id => @project.id, :action => :promote , :confirm => t("msg_confirm") %></td>
            <%end %>
            <%if @project.statusobject.demote==true %>
            <td><%= link_to t(:demote), :id => @project.id, :action => :demote , :confirm => t("msg_confirm") %></td>
            <%end %>
        
        <td>
            <%= link_to t("explorer"), @project %>
        </td>
        <td>
            <%= link_to t("list"), projects_path %>
        </td>
    </tr>
</table>
<% end %>