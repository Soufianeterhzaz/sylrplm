<h1><%=t(:volume_list) %></h1>

<table>
  <tr>
    <th><%=t(:label_name)%></th>
    <th><%=t(:label_description)%></th>
    <th><%=t(:label_directory)%></th>
    <th><%=t(:label_protocol)%></th>
						<th></th><th></th><th></th>
 
  </tr>

<% @volumes.each do |volume| %>
  <tr>
    <td><%=h volume.name %></td>
    <td><%=h volume.description %></td>
    <td><%=h volume.directory %></td>
    <td><%=h volume.protocole %></td>
    <td><%= link_to h_img_show.to_s, volume %></td>
    <td><%= link_to h_img_edit.to_s, edit_volume_path(volume) %></td>
    <td><%= link_to h_img_destroy.to_s, volume, :confirm =>t(:msg_confirm), :method => :delete %></td>
  </tr>
<% end %>
</table>
