<fieldset>
	<legend>
		<%= t(:legend_volume) %>
	</legend>
	<input type="hidden" name="olddir" value="<%= @volume.directory %>"/>
	<%= f.label t(:label_name) %>
	<%= f.text_field :name , :readonly=>(fonct=="edit")%>
	<br/>
	<%= f.label t(:label_directory) %>
	<%= f.text_field :directory , :readonly=>(fonct=="edit")%>
	<br/>
	<%= f.label t(:label_protocol) %>
	<% if fonct=="edit" %>
	<%= f.text_field :protocol , :readonly=>(fonct=="edit") %>
	<% else %> 
	<%= f.select( :protocol, Volume.protocol_values) %>
	<% end %>
	<br/>
	<%= f.label t(:label_description) %>
	<%= f.text_area :description %>
	<br/>
</fieldset>

