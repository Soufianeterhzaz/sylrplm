<fieldset>
	<legend>
		<%= t(:legend_forum) %>
	</legend>
	<%= f.label :typesobject_id %>
	<%= f.collection_select(:typesobject_id, @types, :id, :name) %>
	<br/>
	<%= f.label :statusobject_id %>
	<%= f.collection_select(:statusobject_id, @status, :id, :name) %>
	<br/>
	<%= f.label :subject %>
	<%= f.text_field :subject %>
	<br/>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br/>
	<%= label_tag :message %>
	<%= text_area_tag :message %>
	<br/>
	<%= hidden_field_tag "forum[owner_id]" , @forum.owner_id %>
	<%= f.label t(:label_responsible) %>
	<%unless @forum.owner.nil? %>
	<%= text_field_tag :owner, @forum.owner.login, :readonly => true %>
	<%end%>
	<br/><br/>
	<%= h_input_text(f ,:domain) %>
	<br />
</fieldset>
