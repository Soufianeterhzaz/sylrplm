<h1><%=t(:role_list) %><%=h_count_objects(@roles) %></h1>
<table class='menu_bas'>
    <tr>
        <td>
            <%= link_to t(:new_role), new_role_path %>
        </td>
        <td>
            <%= show_help("help_roles") %>
        </td>
    </tr>
</table>
<%= form_simple_query_helper('/roles', @roles) %>
<%= will_paginate(@roles[:recordset]) %>
<table>
    <tr>
        <th>
            <%=t(:label_name) %>
        </th>
        <th>
            <%=t(:label_description) %>
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>
    <% @roles[:recordset].each do |role| %>
    <tr>
        <td>
            <%=h role.title %>
        </td>
        <td>
            <%=h role.description %>
        </td>
        <td>
            <%= link_to h_img_show.to_s, role %>
        </td>
        <td>
            <%= link_to h_img_edit.to_s, edit_role_path(role) %>
        </td>
        <td>
            <%= link_to h_img_destroy.to_s, role, :confirm => t(:msg_confirm), :method => :delete %>
        </td>
    </tr>
    <% end %>
</table>
<%= will_paginate(@roles[:recordset]) %>

