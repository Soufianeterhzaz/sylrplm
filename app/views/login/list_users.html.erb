<h1><%=t("user_list") %><%=h_count_objects(@all_users) %></h1>
<%= form_simple_query_helper('/login/list_users', @all_users) %>
<br/>
<%= will_paginate(@all_users[:recordset]) %>
<table>
    <tr>
        <th<%= sort_td_class_helper "login" %>
            <%= sort_link_helper t(:label_username), "login" %>
        </th>
        <th<%= sort_td_class_helper "role" %>
            <%= sort_link_helper t(:label_role), "role.title" %>
        </th>
        <th<%= sort_td_class_helper "mail" %>
            <%= sort_link_helper t(:label_email), "email" %>
        </th>
        <th>
            <%= sort_td_class_helper "volume" %>
            <%= sort_link_helper t(:label_volume), "volume.name" %>
        </th>
        <th<%= sort_td_class_helper "theme" %>
            <%= sort_link_helper t(:label_theme), "theme" %>
        </th>
        <th<%= sort_td_class_helper "nb_items" %>
            <%= sort_link_helper t(:label_nb_items), "nb_items" %>
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>
    <% for user in @all_users[:recordset] %>
    <tr>
        <td>
            <%= h(user.login) %>
        </td>
        <td>
            <%if(user.role != nil) %>
            <%= h(user.role.title) %>
            <%end %>
        </td>
        <td>
            <%= h(user.email) %>
        </td>
        <td>
            <%=h user.volume.name %>
        </td>
        <td>
            <%= h(user.theme) %>
        </td>
        <td>
            <%= h(user.nb_items) %>
        </td>
        <td>
            <%= link_to h_img_edit.to_s, :controller => "login", :action => :edit_user, :id => user.id %>
        </td>
        <td>
            <%= link_to h_img_destroy.to_s, 	{ #link_to options
            :controller => "login",
            :action => "delete_user",
            :id => user },
            { #html options
            :method => :post,
            :confirm => t("msg_confirm") } %>
        </td>
    </tr>
    <% end %>
</table>
<%= will_paginate(@all_users[:recordset]) %>
<br/>
<table class='menu_bas'>
    <tr>
        <td>
            <%= link_to t("new_user"), :controller=> "login", :action => "add_user" %>
        </td>
        <td>
            <%= show_help("help_users") %>
        </td>
    </tr>
</table>
