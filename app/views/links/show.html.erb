<h1><%= t("link_show") %></h1>
<% form_for(@link) do |f| %>
<%= f.error_messages %>
<p>
	<b><%= t(:label_father_plmtype) %></b>
	<%= h @link.father_plmtype %>
</p>
<p>
	<b><%= t(:label_child_plmtype) %></b>
	<%= h @link.child_plmtype %>
</p>
<p>
	<b><%= t(:label_father) %></b>
	<%= h @link.father.ident %>
</p>
<p>
	<b><%= t(:label_child) %></b>
	<%= h @link.child.ident %>
</p>
<p>
	<b><%= t(:label_values) %></b>
	<%= h @link.values%>
</p>

<p>
	<b><%= t(:label_responsible) %></b>
	<%= h @link.owner.login unless @link.owner.nil? %>
</p>
<table class='menu_bas'>
	<tr>
		<td> <%= link_to t("edit"), edit_link_path(@link) %></td>
		<td> <%= link_to t("link_new"), new_link_path %></td>
		<td> <%= link_to t("list"), links_path %></td>
	</tr>
</table>
<% end %>
