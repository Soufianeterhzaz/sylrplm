<h1>Editing link</h1>
<% fonct="edit"
form_id=fonct+"_link" %>
<% form_for(@link, :html => { :id => form_id }) do |f| %>
<%= f.error_messages %>
<%= render(
:partial => "links/edit",
:locals => {
:form => f,
:fonct => fonct,
:form_id => form_id }
) %>
<p>
	<%= f.submit 'Update' %>
</p>
<% end %>
<%= link_to 'Show', @link %> |
<%= link_to 'Back', links_path %>