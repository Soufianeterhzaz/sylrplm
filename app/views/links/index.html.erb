<h1>Listing links <%=h_count_objects(@links)%> </h1>
<%= link_to 'New link', new_link_path %>
<%= form_simple_query_helper('/links', @links) %>
<%= will_paginate(@links[:recordset]) %>
<table>
  <tr>
    <th>Father object</th>
    <th>Child object</th>
    <th>Father</th>
    <th>Child</th>
    <th>Name</th>
    <th>Designation</th>
    <th>Description</th>
    <th>Responsible</th>
  </tr>

<% @links[:recordset].each do |link| %>
  <tr>
    <td><%=h link.father_object %></td>
    <td><%=h link.child_object %></td>
    <td><%=h link.father_id %></td>
    <td><%=h link.child_id %></td>
    <td><%=h link.name %></td>
    <td><%=h link.designation %></td>
    <td><%=h link.description %></td>
    <td><%=h link.responsible %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate(@links[:recordset]) %>
