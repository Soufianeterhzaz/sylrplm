<div class="favori-title">
  <%= t(:"favoris_#{type}") %>
  <%= link_to h_img(:remove_all).to_s, url: { controller: type.pluralize, action: 'empty_favori' }, method: :get, remote: true %>
</div>
<% if @favori.get(type).present? %>
  <table>
    <%= render 'layouts/favorite_item', collection: @favori.get(type) %>
  </table>
<% end %>
