
<h1><%=t(:part_new)%></h1>

<% form_for(@part) do |f| %>
  <%= f.error_messages %>

  <p>
    <b><%= f.label t(:label_ident) %></b><br />
    <%= f.text_field :ident %>
  </p>
  <p>
    <b><%= f.label t(:label_type) %></b><br />
    <%= f.collection_select(:typesobject_id, @types, :id, :name)%>  </p>
  <p>
    <b><%= f.label t(:label_revision) %></b><br />
    <%=h @part.revision %>
		
		<%= hidden_field :part , :revision %>
  </p>
  <p>
    <b><%= f.label t(:label_designation) %></b><br />
    <%= f.text_field :designation %>
  </p>
  <p>
    <b><%= f.label t(:label_description) %></b><br />
    <%= f.text_area :description , :rows => 10%>
  </p>
 <p>
  <b><%=t(:label_status)%></b><br />
  <% if(@part.statusobject != nil) %>
  	<%=h @part.statusobject.id %>:<%=h @part.statusobject.name %>
  <% end %> 
</p>
  <p>
    <b><%= f.label t(:label_responsible) %></b><br />
    <%= @part.owner.login %>
  </p>
  
  <p>
    <b><%= f.label t(:label_date) %></b><br />
    <%= f.date_select :date %>
  </p>

<table class='menu_bas'>
<tr>
<td><%= f.submit t("create") %></td>
<td><%= link_to t("list"), parts_path %></td>
</tr>
</table>
<% end %>