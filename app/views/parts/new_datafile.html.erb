<h1><%= t(:datafile_add) %></h1>
<%= form_for @datafile, :html => { :multipart => true}, :url => { :action=>"add_datafile",:id=>@part.id }  do |f| %>
<%= f.error_messages %>
<%= hidden_field_tag "part_id", @part.id.to_s %>
<%= render(:partial => "datafiles/edit_datafile",:locals => { :f => f , :fonct=>"doc_new", :document=>@part}) %>
<table class='menu_bas'>
	<tr>
		<td><%= f.submit t("create") %></td>
		<td> <%= link_to t("list"), datafiles_path %> </td>
		<td> <%= link_to t("part_show"), part_path(@part) %> </td>
	</tr>
</table>
<% end %>
