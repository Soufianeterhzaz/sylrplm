<fieldset>
	<legend>
		<%= t(:legend_part) %>
	</legend>
	<%= f.label t(:label_ident) %>
	<%= f.text_field :ident %>
	<br/>
	<%= f.label t(:label_type) %>
	<%= f.collection_select(:typesobject_id, @types, :id, :name) %>
	<br/>
	<%= f.label t(:label_revision) %>
	<%= text_field_tag :revision, @part.revision, :disabled => true %>
	<br/>
	<%= f.label t(:label_designation) %>
	<%= f.text_field :designation %>
	<br/>
	<%= f.label t(:label_description) %>
	<%= f.text_area :description , :rows => 10 %>
	<br/>
	<% if !(@part.statusobject.promote && @part.statusobject.demote) && !@part.frozen? %>
	<%= f.label t("modif_status") %>
	<% unless @part.statusobject.nil? %>
	<%= f.collection_select(:statusobject_id, @status, :id, :name) %>
	<% end %>
	<% else %>
	<%= f.label t("label_status") %>
	<% unless @part.statusobject.nil? %>
	<%= text_field_tag :statusobject,  @part.statusobject.name, :disabled => true %>
	<% end %>
	<% end %>
	<br/>
	<%= f.label t(:label_responsible) %>
	<%= text_field_tag :responsible,  @part.owner.login, :disabled => true %>
	<br/>
	<%= f.label t(:label_date) %>
	<%= f.date_select :date %>
	<br/>
	<%= h_input_text(f ,:domain) %>
	<br />
</fieldset>
