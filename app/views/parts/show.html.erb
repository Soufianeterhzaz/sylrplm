<table class='menu_bas'>
    <tr>
        <td>
            <%= link_to h_img_add_forum.to_s+t("add_forum"), :id => @part.id, :action => :new_forum %>
        </td>
        <td>
            <% if (@part.is_freeze() == true ) %>
            <%=t("freeze") %>
