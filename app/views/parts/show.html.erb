<h1></h1>
<%= h_sylrplm_tree %>
<table class='menu_bas'>
    <tr>
    <% if(!@favori_document.empty) %>
    <% form_for(@part, :url => {:id => @part.id, :action => "add_docs" }) do |f| %>
    <td>
        <%= select("relation","document",options_for_select(@relation_types_document)) %>
    </td>
    <td>
        <%= submit_tag t("paste_documents") %>
    </td>
    <% end %>
    <!--
    <%= link_to h_img_add_documents.to_s+t("paste_documents"), :id => @part.id, :action => :add_docs %>
    -->
    <tr>
        <% end %>
        <% if(!@favori_part.empty) %>
        <% form_for(@part, :url => {:id => @part.id, :action => "add_parts" }) do |f| %>
        <td>
            <%= select("relation","part",options_for_select(@relation_types_part)) %>
        </td>
        <td>
            <%= submit_tag t("paste_parts") %>
        </td>
        <% end %>
        <!--
        <%= link_to h_img_add_parts.to_s+t("paste_parts"), :id => @part.id, :action => :add_parts %>
        --><% end %>
    </tr>
</table>
