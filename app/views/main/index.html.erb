<h1><%= t(:hello) %></H1>
<h2><%= t(:tit_language) %><%= I18n.locale.to_s %></h2>

<% unless User.count == 0 %> <h2><%= t(:datas_in_database) %></h2>
<table>
	<% @datas.each do |key,value| %>
	<tr>
		<td> <%= @datas[key] %></td>
		<td> <%= t("ctrl_#{key}") %></td>
	</tr>
	<% end %>
</table>
<hr>
<%= h_help_all %>
<hr>
<h2><%= t("context_info") %></h2>
<table>
	<tr>
		<th> key</th>
		<th> value</th>
	</tr>
	<% for item in request.env %>
	<% if item[0].index("rack.session") == nil %>
	<tr>
		<td> <%= item[0] %></td>
		<td> <%= item[1] %></td>
	</tr>
	<%end %>
	<% end %>
</table>
<% else %>

<% unless @domains.nil? %>
<% form_tag do |f| %>
<fieldset>
	<legend>
		<%= t(:ctrl_init_to_do) %>
	</legend>
	<label for="domain"> <%= t(:label_domain) %> </label>
	<%= select_tag("domain", @domains) %>
	<br/>
	<label for="directory"> <%= t(:label_directory) %> </label>
	<%= text_field_tag :directory, @directory %>
	<br/>
</fieldset>
<table class='menu_bas'>
	<tr>
		<td> <%= submit_tag t(:submit_create_domain) %></td>
	</tr>
</table>
<% end %>
<hr>
<%= h_help("help_init_db")[:text] %>
<%end %>

<% end %> 