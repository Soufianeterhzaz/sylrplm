<h1><%= t(:hello) %></H1>
<h2><%= t(:tit_language) %><%= I18n.locale.to_s %></h2>
<h2><%= t(:datas_in_database) %></h2>
<table>
	<% @datas.each do |key,value| %>
	<tr>
		<td> <%= @datas[key] %></td>
		<td> <%= t("ctrl_#{key}") %></td>
	</tr>
	<% end %>
	
</table>
<hr>
<%= h_help_all %>
<hr>
<h2><%= t("context_info") %></h2>
<table>
	<tr>
		<th> key</th>
		<th> value</th>
	</tr>
	<% for item in request.env %>
	<% if item[0].index("rack.session") == nil %>
	<tr>
		<td> <%= item[0] %></td>
		<td> <%= item[1] %></td>
	</tr>
	<%end %>
	<% end %>
</table>
