<div id="banner">
    <table>
        <tr>
            <td class='title'>
                <%= @page_title || "SYLRPLM" %>
            </td>
			<% if connected %>
            <td class='banner'>               
                <%= @current_username %>(<%= @current_userrole %>)				                            
            </td>
			<td class='banner'>
                <%= link_to h_img("disconnect").to_s, sessions_path, :method => :delete %>
            </td>
			<% else %>
            <td class='banner'>
                <%= link_to t("connect"), new_sessions_url %>
            </td>
			<% end %>
            <% if @themes != nil %>
            <% form_tag do |f| %>
            <td class='banner'>
                <%= t(:label_theme) %>
            </td>
            <td class='banner'>
                <%= select_tag("theme",@themes,:class=>'banner') %>
            </td>
            <td class='banner'>
                <%= h_img_sub(:submit) %>
            </td>
            <td class='banner'>
                <%= Date.today %>
            </td>
            <%end %>
            <%end %>
        </tr>
    </table>
</div>
