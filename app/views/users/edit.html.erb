<h1><%= t(:user_edit) %></h1>
<% fonct="edit" %>
<% form_for @the_user, :html => { :id => h_form_html_id(@the_user, fonct) } do |form| %>
<%= form.error_messages %>
<fieldset>
	<legend>
		<%= t(:legend_user) %>
	</legend>
	<%= render(:partial => "users/edit",:locals => { :form => form, :fonct => fonct }) %>
	<table class='menu_bas'>
		<tr>
			<td> <%= submit_tag t("update") %> </td>
			<td> <%= link_to t("explorer"), @current_user %> </td>
			<td> <%= link_to t("list"), users_path %> </td>
		</tr>
	</table>
</fieldset>
<%end %>

