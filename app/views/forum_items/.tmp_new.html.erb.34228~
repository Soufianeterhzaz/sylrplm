<h1><%=t(:forum_item_new) %></h1>
<% form_for(@forum_item) do |f| %>
<%= f.error_messages %>
<p>
    <%= f.label t(:label_message) %>
    <br/>
    <%= f.text_area :message %>
</p>
<% if @forum_item.parent_id == nil %>
<p>
    <%= f.label t(:label_id) %>
    <br/>
    <%= f.text_field :forum_id %>
</p>
<p>
    <%= f.label t(:label_parent) %>
    <br/>
    <%= f.text_field :parent_id %>
</p>
<p>
    <%= f.label t(:label_owner) %>
    <br/>
    <%= f.text_field :owner_id %>
</p>
<% else %>
<p>
    <%= f.label t(:label_forum) %>
    <br/>
    <%= f.text_field :forum_id , :readonly=>"readonly"%>
</p>
<p>
    <%= f.label t(:label_parent) , :readonly=>"readonly" %>
    <br/>
    <%= f.text_field :parent_id %>
</p>
<p>
    <%= f.label :owner_id %>
    <br/>
    <%= f.text_field :owner_id , :readonly=>"readonly"%>
</p>
<% end %>
<table class='menu_bas'>
    <tr>
        <td>
            <%= f.submit t(:create) %>
        </td>
        <td>
            <%= link_to t(:list), forum_items_path %>
        </td>
    </tr>
</table>
<% end %>
